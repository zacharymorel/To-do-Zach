<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TO DO!!!</title>
  </head>
  <body>
    <h3>To Do List!</h3>
    <form action="/create" method="post">
      <input type="text" name="listItem" value="" placeholder="Add to todo">
      <button type="submit" name="submit">To do!</button>
    </form>
    <ul>
      {{#uncompleted}}
      <li>
          <form action="/markComplete/{{id}}" method="post">
            <button type="submit" name="{{id}}">Mark Complete</button>
            {{listItem}}
          </form>
      </li>
      {{/uncompleted}}
    </ul>
    <h3>Completed Tasks!</h3>
    <ul>
      {{#completed}}
        <li>
          {{listItem}}
        </li>
      {{/completed}}
    </ul>
  </body>
</html>
